<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.lany192.rxpicker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.github.lany192.rxpicker.picker.RxPickerActivity"
            android:launchMode="singleTop"
            android:theme="@style/RxPicker.AppTheme" />

        <activity
            android:name="com.github.lany192.rxpicker.preview.PreviewActivity"
            android:launchMode="singleTop"
            android:theme="@style/RxPicker.AppTheme" />

        <provider
            android:name="com.github.lany192.rxpicker.utils.RxPickerProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/rx_picker_file_path" />
        </provider>

    </application>

</manifest>
