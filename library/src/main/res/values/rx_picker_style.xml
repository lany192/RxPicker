<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RxPicker.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/rx_picker_colorPrimary</item>
        <item name="colorPrimaryDark">@color/rx_picker_colorPrimaryDark</item>
        <item name="colorAccent">@color/rx_picker_colorAccent</item>
    </style>

    <!-- RxPickerActivity Theme-->
    <style name="RxPicker.AppTheme.NoActionBar" parent="RxPicker.AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>


    <style name="RxPicker.ToolbarTheme" parent="RxPicker.AppTheme.NoActionBar">
        <item name="titleTextColor">@color/rx_picker_width</item>
        <item name="android:textColorSecondary">@color/rx_picker_width</item>
        <item name="android:textColor">@color/rx_picker_width</item>
        <item name="android:background">@color/rx_picker_colorPrimaryDark</item>
    </style>

    <style name="RxPicker.PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/rx_picker_fade_in</item>
        <item name="android:windowExitAnimation">@anim/rx_picker_fade_out</item>
    </style>


</resources>